<!DOCTYPE html>
<html>
  <head>
		<meta charset="utf-8">
		<title>Administrator</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
		<link href="..//css/login-register.css" rel="stylesheet">
		<script type="text/javascript" src="..//MDB/js/jquery.min.js"></script>
		<link href="..//MDB/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
		<link href="..//MDB/css/mdb.min.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<div id="login_system">
			<div class="login-box">
				<div class="title">
					ĐĂNG NHẬP HỆ THỐNG
				</div>
				<div class="content">
				    <%if (data && data.error){%>
				    <div class="alert alert-danger">
				        <%=data.error %>
				    </div>
				    <% }%>
					<form role="form" action="login.html" method="POST" name="dangnhap" id="dangnhap">
						<div class="form-group clear">
							<input type="text" class="form-control" name="username" id="login_username" placeholder="Username">
						</div>
						<div class="form-group clear">
							<input type="password" class="form-control" name="password" id="login_matkhau" placeholder="Password" onkeypress="dologin(event);">
						</div>
						<div class="clear"></div>
					
					<div class="col-xs-12">
						<span id="LoginResult"></span>	
					</div>
					<div class="form-group">
						<button type="button" class="btn-login" onclick="return login_check();">Đăng nhập</button>
					</div>
					<div class="form-group text-center bold">
						Gọi Hotline nếu bạn cần trợ giúp: <span style="color: #f00;">0902 541 064</span>
					</div>
					</form>
				</div>
			</div>
		</div>
		<script>
			function login_check(){
				if($("#login_username").val()==""){
					alert("Vui lòng nhập username");
					$("#login_username").focus();
					return false;
				}
				if($("#login_matkhau").val()==""){
					alert("Vui lòng nhập mật khẩu");
					$("#login_matkhau").focus();
					return false;
				}
				$("#dangnhap").submit();
			}
			function dologin(event){
				var key;
				if (event.keyCode == 13 || event.which == 13) {
					login_check();
				}
			}
		</script>
		<script type="text/javascript" src="..//MDB/js/bootstrap.min.js" charset="utf-8"></script>
		<script type="text/javascript" src="..//MDB/js/mdb.min.js" charset="utf-8"></script>
		<script type="text/javascript" src="..//MDB/js/popper.min.js" charset="utf-8"></script>
	</body>
</html>
