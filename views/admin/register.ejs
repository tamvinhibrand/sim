<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Administrator</title>
        <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
        <link href="../css/login-register.css" rel="stylesheet">
        <script type="text/javascript" src="../MDB/js/jquery.min.js"></script>
        <link href="../MDB/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
        <link href="../MDB/css/mdb.min.css" type="text/css" rel="stylesheet" />
    </head>
    <body>
        <div id="login_system">
            <div class="login-box">
                <div class="title">
                    ĐĂNG KÝ HỆ THỐNG
                    <a href="login.html">Đăng nhập nếu có tài khoản</a>
                </div>
                <div class="content">
                    <div class="alert alert-danger" <%if (!data || !data.error){%> style="display: none;"<%}%>>
                        <%= data.error %>
                    </div>
                    <form role="form" action="register.html" method="POST" name="formdktv" id="formdktv">
                        <div class="form-group clear">
                            <input type="text" class="form-control" name="ten" id="ten" placeholder="Họ và tên">
                        </div>
                        <div class="form-group clear">
                            <input type="text" class="form-control" name="username" id="username" placeholder="Tài khoản">
                        </div>
                        <div class="form-group clear">
                            <input type="password" class="form-control" name="password" id="password"  placeholder="Mật khẩu">
                        </div>
                        <div class="form-group clear">
                            <input type="password" class="form-control" name="re_password" id="re_password" placeholder="Nhập lại mật khẩu">
                        </div>
                        <div class="form-group clear">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn-login">Đăng ký</button>
                        </div>
                        <div class="form-group text-center bold">
                            Gọi Hotline nếu bạn cần trợ giúp: <span style="color: #f00 ">0902 541 064</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script>
            function check(){
                if($("#ten").val()==""){
                    alert("Vui lòng nhập họ tên");
                    $("#ten").focus();
                    return false;
                }
                if($("#username").val()==""){
                    alert("Vui lòng nhập username");
                    $("#username").focus();
                    return false;
                }
                if($("#password").val()==""){
                    alert("Vui lòng nhập mật khẩu");
                    $("#password").focus();
                    return false;
                }
                $("#formdktv").submit();
             }
            function dologin(event){
                var key;
                if (event.keyCode == 13 || event.which == 13) {
                    check();
                }
            }
        </script>
        <script type="text/javascript" src="../MDB/js/bootstrap.min.js" charset="utf-8"></script>
        <script type="text/javascript" src="../MDB/js/mdb.min.js" charset="utf-8"></script>
        <script type="text/javascript" src="../MDB/js/popper.min.js" charset="utf-8"></script>
    </body>
</html>
